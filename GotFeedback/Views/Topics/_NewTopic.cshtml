@model Topic
@using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
{
  @Html.AntiForgeryToken()
  @Html.HiddenFor(model => model.Category)

  <div class="">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
      @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "sr-only" })
      @Html.TextAreaFor(model => model.Title, new { @class = "form-control", placeholder = "Title", required = "required", rows = 6 })
      @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <input type="submit" class="btn btn-primary pull-right" value="Next" />
  </div>
}
