@model Topic

@{
  ViewBag.Title = "New topic";
}

<div role="tabpanel">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#idea" aria-controls="idea" role="tab" data-toggle="tab" class="nav-success">Idea</a></li>
    <li role="presentation"><a href="#bug" aria-controls="bug" role="tab" data-toggle="tab" class="nav-danger">Bug</a></li>
    <li role="presentation"><a href="#question" aria-controls="question" role="tab" class="nav-warning" data-toggle="tab">Question</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="idea">
      <h2>Give feedback</h2>
      @using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
      {
        @Html.AntiForgeryToken()
        @Html.Hidden("Category", TopicCategory.Idea)

        <div class="">
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "sr-only" })
            @Html.TextAreaFor(model => model.Title, new { @class = "form-control", placeholder = "Title", required = "required", rows = 6 })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
          </div>

          <input type="submit" class="btn btn-success pull-right" value="Next" />
        </div>
      }
    </div>
    <div role="tabpanel" class="tab-pane" id="bug">
      <h2>Report a bug</h2>
      @using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
      {
        @Html.AntiForgeryToken()
        @Html.Hidden("Category", TopicCategory.Bug)

        <div class="">
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "sr-only" })
            @Html.TextAreaFor(model => model.Title, new { @class = "form-control", placeholder = "Title", required = "required", rows = 6 })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
          </div>

          <input type="submit" class="btn btn-danger pull-right" value="Next" />
        </div>
      }
    </div>
    <div role="tabpanel" class="tab-pane" id="question">
      <h2>Get help</h2>
      @using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
      {
        @Html.AntiForgeryToken()
        @Html.Hidden("Category", TopicCategory.Question)

        <div class="">
          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
          <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "sr-only" })
            @Html.TextAreaFor(model => model.Title, new { @class = "form-control", placeholder = "Title", required = "required", rows = 6 })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
          </div>

          <input type="submit" class="btn btn-warning pull-right" value="Next" />
        </div>
      }
    </div>
  </div>

</div>
<div class="clearfix"></div>