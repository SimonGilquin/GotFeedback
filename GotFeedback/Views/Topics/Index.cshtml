@using GotFeedback.Controllers
@model IEnumerable<GotFeedback.Models.Topic>

@{
    ViewBag.Title = "Index";
}

<br />

@using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
{
    <div class="">
        <input type="text" class="" name="q">
        <input type="submit" value="search" class="">
    </div>
}

<br />

<div class="">
    <table class="table-striped" style="border-collapse: separate;border-spacing: 5px;">
        <tr>
            <td>
                @using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
                {
                    <button type="submit" class="btn btn-success pull-left">
                        New Topic &nbsp; <i class="fa fa-plus"></i>
                    </button>
                }
            </td>
            <td>
                @using (Html.BeginForm("Index", "Topics", new { order = TopicsOrderBy.CreatedDate }, FormMethod.Post, new { @class = "" }))
                {
                    <button type="submit" class="btn btn-info pull-left">
                        Order by date &nbsp; <i class="fa fa-bars"></i>
                    </button>
                }
            </td>
            <td>
                @using (Html.BeginForm("Index", "Topics", new { order = TopicsOrderBy.ViewCount }, FormMethod.Post, new { @class = "" }))
                {
                    <button type="submit" class="btn btn-info pull-left">
                        Order by views &nbsp; <i class="fa fa-star"></i>
                    </button>
                }
            </td>
        </tr>
    </table>
</div>
<br />

@foreach (var item in Model)
{
    <table class="table-responsive" style="margin-top: 5px;margin-bottom: 5px">
        <tr>
            <th>

                <div>
                    @Html.ActionLink(@item.Title, "Details", new { id = item.Id })

                </div>
            </th>
        </tr>

        <tr>
            <td>
                <div style="margin-left: 10px">
                    @foreach (var topicTag in item.Tags)
                    {
                        <a class="post-tag" rel="tag" title="" href="#">@topicTag.Label</a>
                    }
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="btn-group pull-right">
                    <button type="submit" class="btn btn-default" onclick="location.href='@Url.Action("AddLike", "Topics", new { id = item.Id })'">
                        (+@item.LikesCount)&nbsp;<i class="glyphicon glyphicon-thumbs-up"></i>
                    </button>
                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("AddLike", "Topics")'">
                        <i class="fa fa-question"></i>
                    </button>
                    <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("New", "Comments")'">
                        <i class="fa fa-comment"></i>
                    </button>
                </div>
            </td>


            @*<td>
                    <div>
                        <button class="btn btn-group"></button>

                        Like (+@item.LikesCount)&nbsp;

                        <a href="@Url.Action("AddLike", new {id = item.Id})">
                            <i class="glyphicon glyphicon-thumbs-up"></i>
                        </a>
                    </div>
                </td>
                <td>
                    <div>
                        Ask <i class="fa fa-question"></i>
                    </div>
                </td>
                <td>
                    <div>
                        <a href="@Url.Action("New", "Comments", new Comment { TopicId = item.Id })">
                            Comment   <i class="fa fa-comment"></i>
                        </a>
                    </div>
                </td>*@
        </tr>
    </table>
}
