@model IEnumerable<GotFeedback.Models.Topic>

@{
    ViewBag.Title = "Index";
}

<br />

@using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
{
    <div class="">
        <input type="text" class="tftextinput" name="q"><input type="submit" value="search" class="tfbutton">
    </div>
}

<br />

@using (Html.BeginForm("New", "Topics", FormMethod.Post, new { @class = "" }))
{
    <div class="">
        <button type="submit" class="btn btn-success pull-left">
            New Topic &nbsp;
            @*<img src="~/img/Add.png" height="24" width="24" />*@
        </button>
    </div>
}    

<br />

@foreach (var item in Model)
{
    <table class="table-responsive" style="margin-top: 5px;margin-bottom: 5px">
        <tr>
            <th colspan="3">
                @Html.ActionLink(@item.Title, "Details", new { id = item.Id })     
            </th>
        </tr>

        <tr>
            <td colspan="3">
                <a class="post-tag" rel="tag" title="" href="#">Question</a>
                <a class="post-tag" rel="tag" title="" href="#">Bug</a>
            </td>
        </tr>
        <tr>
            <td>
                Like  
            </td>
            <td>
                Ask
            </td>
            <td>
                Comment
            </td>
        </tr>
    </table>
}


<br />
