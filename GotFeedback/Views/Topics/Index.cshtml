<br />

@foreach (var item in Model)
{
    <table class="table-responsive" style="margin-top: 5px;margin-bottom: 5px">
        <tr>
            <th colspan="3">

                <div style="margin: 10px">
                    @Html.ActionLink(@item.Title, "Details", new { id = item.Id })

                </div>
            </th>
        </tr>

        <tr>
            <td colspan="3">
                <div style="margin-left: 10px">
                    <a class="post-tag" rel="tag" title="" href="#">Question</a>
                    <a class="post-tag" rel="tag" title="" href="#">Bug</a>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div style="margin: 2px">
                    Like (+7)&nbsp; <i class="glyphicon glyphicon-thumbs-up"></i>
                </div>
            </td>
            <td>
                <div style="margin: 2px">
                    Ask <i class="fa fa-question"></i>
                </div>
            </td>
            <td style="text-align: right">
                <div style="margin: 2px">
                    Comment   <i class="fa fa-comment"></i>
                </div>
            </td>
        </tr>
    </table>
}


