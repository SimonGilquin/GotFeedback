@model Comment

@using (@Html.BeginForm("New", "Comments", FormMethod.Post, new { id = "NewCommentForm" }))
{
  @Html.AntiForgeryToken()

  <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TopicId)

    <div class="form-group">
      @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Add a new comment")
      <div class="col-md-10">
        @Html.TextBoxFor(model => model.Message, new { @class = "form-control", placeholder = "Enter your comment here...", required = "required"})
        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Post" class="btn btn-primary" />
      </div>
    </div>
  </div>
}


