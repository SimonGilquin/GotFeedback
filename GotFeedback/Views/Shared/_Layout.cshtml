<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Got Feedback?</title>
  @Styles.Render("~/css")
  @Scripts.Render("~/bundles/modernizr")

</head>
<body>
  <div class="ui page grid @*masthead*@ segment">
    <div class="column">
      <div class="secondary pointing ui menu">
        @Html.ActionLink("Got Feedback?", "Index", "Home", new { area = "" }, new { @class = "header item" })
        <div class="right menu">
          <div class="ui top right pointing mobile dropdown link item">
            Menu
            <i class="dropdown icon"></i>
            <div class="menu">
              @Html.ActionLink("Home", "Index", "Home", null, new { @class = "item" })
              @Html.ActionLink("About", "About", "Home", null, new { @class = "item" })
              @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "item" })

            </div>
          </div>
          @Html.ActionLink("Home", "Index", "Home", null, new { @class = "item" })
          @Html.ActionLink("About", "About", "Home", null, new { @class = "item" })
          @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "item" })
          @Html.Partial("_LoginPartial")
        </div>
      </div>
    </div>
  </div>
  <div class="">
    @RenderBody()
    <footer class="ui divided horizontal footer link list">
      <p class="item">&copy; @DateTime.Now.Year - GotFeedback?</p>
    </footer>  </div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/javascript")
  @RenderSection("scripts", required: false)
</body>
</html>
