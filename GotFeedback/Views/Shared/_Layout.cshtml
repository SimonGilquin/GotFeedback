<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - Got Feedback?</title>
  @Styles.Render("~/css")
  @Scripts.Render("~/bundles/modernizr")

</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>


        <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
          <img alt="Brand" class="app-logo" src="@Url.Content("~/img/logo_transparent.png")">
        </a>
      </div>
      <div class="navbar-collapse collapse">
        @Html.Partial("_LoginPartial")
        @Html.Partial("_Notifications")
      </div>
    </div>
  </div>
  @Html.Partial("_Messages")
  <div class="container-fluid body-content">
    @RenderBody()
    <hr />
    <footer class="">
      <p class="">&copy; @DateTime.Now.Year - GotFeedback?</p>
    </footer>
  </div>

  @Scripts.Render("~/js/jquery")
  @Scripts.Render("~/js")
  @Scripts.Render("~/js/jqueryval")
  @Scripts.Render("~/js/signalr")
  <script src="~/signalr/hubs"></script>
  @RenderSection("scripts", required: false)
</body>
</html>
